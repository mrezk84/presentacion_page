---
interface Props {
	title?: string;
	description?: string;
	image?: string;
}

const {
	title = "Marcos Rezk - Analista Programador Full Stack",
	description = "Desarrollador Full Stack con +3 años de experiencia construyendo aplicaciones web escalables con React, C# y SQL Server. Egresado de ORT Uruguay.",
	image = "/perfil.jpg"
} = Astro.props;

// Get base path from Astro config
const isVercel = process.env.VERCEL === '1';
const basePath = isVercel ? '' : '/presentacion_page';

// Helper function to build URLs with base path
const assetUrl = (path: string) => `${basePath}${path}`;

// Use relative URLs for both platforms (Astro handles base path automatically)
const canonicalURL = Astro.url.pathname;
const socialImageURL = image;

// Build absolute URLs for JSON-LD (requires full URLs)
const baseURL = isVercel
  ? 'https://tu-vercel-url.vercel.app' // Reemplaza con tu URL de Vercel
  : 'https://mrezk84.github.io/presentacion_page';

// Remove trailing slash from baseURL and leading slash from image path
const baseURLClean = baseURL.replace(/\/$/, '');
const imagePath = image.replace(/^\//, '');

const fullImageURL = `${baseURLClean}/${imagePath}`;
const fullCanonicalURL = `${baseURLClean}/`;

// Expose helper to slot
const { slot } = Astro;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- Basic Meta Tags -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="author" content="Marcos Rezk" />
		<link rel="canonical" href={canonicalURL} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={socialImageURL} />
		<meta property="og:locale" content="es_ES" />
		<meta property="og:site_name" content="Marcos Rezk" />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={canonicalURL} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={socialImageURL} />
		<meta name="twitter:creator" content="@mrezk84" />

		<!-- Additional SEO -->
		<meta name="keywords" content="Marcos Rezk, Analista Programador, Full Stack Developer, React, C#, SQL Server, ORT Uruguay, Desarrollo Web, Uruguay" />
		<meta name="robots" content="index, follow" />
		<meta name="googlebot" content="index, follow" />
		<meta name="theme-color" content="#0f172a" />

		<!-- Structured Data (JSON-LD) -->
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "Person",
			"name": "Marcos Rezk",
			"jobTitle": "Analista Programador",
			"url": fullCanonicalURL,
			"image": fullImageURL,
			"sameAs": [
				"https://www.linkedin.com/in/marcos-rezk",
				"https://github.com/mrezk84"
			],
			"alumniOf": {
				"@type": "CollegeOrUniversity",
				"name": "Universidad ORT Uruguay"
			},
			"worksFor": {
				"@type": "Organization",
				"name": "SONDA Uruguay"
			},
			"knowsAbout": ["React", "C#", "SQL Server", "JavaScript", "Node.js", "Full Stack Development"],
			"description": "Desarrollador Full Stack con +3 años de experiencia construyendo aplicaciones web escalables con React, C# y SQL Server."
		})}>
		</script>

		<!-- Preconnect -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body
		class="font-sans antialiased bg-slate-50 text-slate-900 dark:bg-slate-950 dark:text-slate-200"
	>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--accent: 212, 175, 55; /* Gold */
		--accent-light: 250, 235, 150;
		--accent-dark: 140, 110, 20;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: "Inter", system-ui, sans-serif;
	}
	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		font-family: "Playfair Display", serif;
	}
</style>
