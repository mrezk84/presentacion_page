---
const links = [
    { name: "Experiencia", href: "#experiencia" },
    { name: "Tecnologías", href: "#tecnologias" },
    { name: "Formación", href: "#formacion" },
    { name: "Contacto", href: "#contacto" },
];
---

<header
    class="fixed w-full top-0 z-50 bg-white/90 dark:bg-slate-900/90 backdrop-blur-md border-b border-slate-200 dark:border-slate-800 transition-all duration-300"
>
    <nav class="max-w-5xl mx-auto px-6 py-4 flex justify-between items-center">
        <a
            href="#"
            class="text-2xl font-bold font-serif text-slate-900 dark:text-white hover:text-amber-500 transition-colors"
        >
            MR
        </a>

        <!-- Desktop Menu -->
        <div
            class="hidden sm:flex gap-8 text-sm font-medium text-slate-600 dark:text-slate-300"
        >
            {
                links.map((link) => (
                    <a
                        href={link.href}
                        class="hover:text-amber-600 dark:hover:text-amber-400 transition-colors"
                    >
                        {link.name}
                    </a>
                ))
            }
        </div>

        <!-- Mobile Menu Button -->
        <button
            id="menu-toggle"
            class="sm:hidden text-slate-600 dark:text-slate-300 focus:outline-none"
            aria-label="Toggle menu"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
            </svg>
        </button>
    </nav>
</header>

<!-- Mobile Menu Overlay -->
<div
    id="mobile-menu"
    class="fixed inset-0 z-[100] bg-white dark:bg-gray-950 transform translate-x-full transition-transform duration-300 ease-in-out sm:hidden flex flex-col items-center justify-center space-y-8"
>
    <button
        id="menu-close"
        class="absolute top-6 right-6 text-gray-600 dark:text-gray-300 focus:outline-none"
        aria-label="Close menu"
    >
        <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-8 h-8"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M6 18L18 6M6 6l12 12"></path>
        </svg>
    </button>

    {
        links.map((link) => (
            <a
                href={link.href}
                class="mobile-link text-2xl font-medium text-gray-800 dark:text-gray-100 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
            >
                {link.name}
            </a>
        ))
    }
</div>

<script>
    const menuToggle = document.getElementById("menu-toggle");
    const menuClose = document.getElementById("menu-close");
    const mobileMenu = document.getElementById("mobile-menu");
    const mobileLinks = document.querySelectorAll(".mobile-link");

    function toggleMenu() {
        mobileMenu?.classList.toggle("translate-x-full");
        document.body.classList.toggle("overflow-hidden");
    }

    menuToggle?.addEventListener("click", toggleMenu);
    menuClose?.addEventListener("click", toggleMenu);

    mobileLinks.forEach((link) => {
        link.addEventListener("click", toggleMenu);
    });
</script>
