    <!-- Toggle Button -->
    <button
        id="chat-toggle"
        class="group flex items-center justify-center w-14 h-14 bg-amber-500 hover:bg-amber-400 text-white rounded-full shadow-lg hover:shadow-amber-500/30 transition-all duration-300 hover:scale-110"
        aria-label="Abrir chat"
    >
